<title>Russian text verb info</title>
</head>
<body>
<div class="container">
<h1>Insert Russian text to get verb info:</h1>
<form method="GET" action="proc_verbinfo">
<input type="textarea" name="res" value="{{ Text }}">
<input type="submit">
</form>
<div class="result">
{% for respair in Result %}
<p>{{ respair[0] }} : {{ respair[1] }} </p>
{% endfor %}

{% for countpair in Counts %}
<p> {{ countpair[0] }} : {{ countpair[1] }} </p>
{% endfor %}
</div>
